#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int main() {
    int n;
    printf("Введіть розмірність квадратної матриці: ");
    scanf("%d", &n);

    int matrix[n][n];
    srand(time(NULL)); 
    // Ініціалізуємо генератор псевдовипадкових чисел

    printf("Згенерована матриця:\n");
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            matrix[i][j] = rand() % 201 - 100; 
            // Генеруємо випадкові числа від -100 до 100

            printf("%d ", matrix[i][j]);
        }
        printf("\n");
    }

    return 0;
}
